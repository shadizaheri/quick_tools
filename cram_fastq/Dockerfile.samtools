FROM ubuntu:22.04

# Avoid prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install samtools and dependencies
RUN apt-get update && \
    apt-get install -y \
    samtools \
    pigz \
    && rm -rf /var/lib/apt/lists/*

# Verify installation
RUN samtools --version

WORKDIR /data

ENTRYPOINT ["samtools"]


